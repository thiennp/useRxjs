{
  "name": "userxjs",
  "version": "0.0.3",
  "description": "A lightweight, hook-based bridge to manage RxJS observable subscriptions and state synchronization within React components.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./useBehaviorSubject": {
      "types": "./dist/useBehaviorSubject.d.ts",
      "import": "./dist/useBehaviorSubject.mjs",
      "require": "./dist/useBehaviorSubject.js"
    },
    "./useObservable": {
      "types": "./dist/useObservable.d.ts",
      "import": "./dist/useObservable.mjs",
      "require": "./dist/useObservable.js"
    },
    "./useReplaySubject": {
      "types": "./dist/useReplaySubject.d.ts",
      "import": "./dist/useReplaySubject.mjs",
      "require": "./dist/useReplaySubject.js"
    },
    "./useSubject": {
      "types": "./dist/useSubject.d.ts",
      "import": "./dist/useSubject.mjs",
      "require": "./dist/useSubject.js"
    },
    "./useAsyncSubject": {
      "types": "./dist/useAsyncSubject.d.ts",
      "import": "./dist/useAsyncSubject.mjs",
      "require": "./dist/useAsyncSubject.js"
    },
    "./useObservableCallback": {
      "types": "./dist/useObservableCallback.d.ts",
      "import": "./dist/useObservableCallback.mjs",
      "require": "./dist/useObservableCallback.js"
    },
    "./useSubscription": {
      "types": "./dist/useSubscription.d.ts",
      "import": "./dist/useSubscription.mjs",
      "require": "./dist/useSubscription.js"
    }
  },
  "packageManager": "pnpm@9.15.0",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.0",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "rxjs": "^7.8.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiennp/useRxjs.git"
  },
  "keywords": [
    "react",
    "rxjs",
    "hooks",
    "behavior-subject",
    "observable"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thiennp/useRxjs/issues"
  },
  "homepage": "https://github.com/thiennp/useRxjs#readme"
}
